<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/appBar"
    android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:visibility="visible"
            tools:context=".activity.MainActivity">

            <TextView
                android:id="@+id/who_win"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/unknown"
                android:textAllCaps="true"
                android:textColor="@color/win"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/game_mode_and_lobby_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/who_win"
                android:gravity="center"
                android:text="@string/unknown" />


            <LinearLayout
                android:id="@+id/score_and_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/game_mode_and_lobby_type"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/radiant_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/match_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingEnd="15dp"
                    android:paddingStart="15dp"
                    android:text="0:0" />

                <TextView
                    android:id="@+id/dire_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_radiant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/score_and_duration"
                android:layout_centerHorizontal="true"
                android:text="@string/radiant" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_radiant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_radiant" />

            <TextView
                android:id="@+id/text_dire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recycler_view_radiant"
                android:layout_centerHorizontal="true"
                android:text="@string/dire" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_dire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_dire" />

        </RelativeLayout>
    </ScrollView>

    <include
        layout="@layout/empty_data_for_match_detail"
        android:visibility="gone" />
</LinearLayout>

