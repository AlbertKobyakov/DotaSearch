<?xml version="1.0" encoding="utf-8"?>


<ScrollView android:layout_width="match_parent"
    android:layout_below="@id/appBar"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".activity.MainActivity">


            <TextView
                android:id="@+id/who_win"
                android:textColor="@color/win"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/unknown"/>

            <TextView
                android:id="@+id/game_mode_and_lobby_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/who_win"
                android:gravity="center"
                android:text="@string/unknown"/>


            <LinearLayout
                android:id="@+id/score_and_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/game_mode_and_lobby_type"
                android:gravity="center">
                <TextView
                    android:id="@+id/radiant_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="0"/>
                <TextView
                    android:id="@+id/match_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="0:0"/>
                <TextView
                    android:id="@+id/dire_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="0"/>
            </LinearLayout>

            <TextView
                android:id="@+id/text_radiant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/radiant"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/score_and_duration"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_radiant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_radiant"/>

            <TextView
                android:id="@+id/text_dire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dire"
                android:layout_below="@id/recycler_view_radiant"
                android:layout_centerHorizontal="true"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_dire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_dire"/>

        </RelativeLayout>
    </ScrollView>

