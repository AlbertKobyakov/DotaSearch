<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="?android:attr/actionBarSize"
    app:behavior_overlapTop="80dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:cardBackgroundColor="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/empty_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="168dp" />

        <TextView
            android:id="@+id/for_empty_recycler_size"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/account_off_96"
            android:gravity="center"
            android:paddingBottom="80dp"
            android:text="Данный игрок никогда не играл с про игроками"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/block_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="80dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/network_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Во время загрузки информации произошла сетевая ошибка. Пожалуйста нажмите на кнопку 'Обновить'. Если ошибка не пропадает, попробуйте позже."
                android:textAlignment="center"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/no_internet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_internet"
                android:textAlignment="center"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/server_not_response"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/server_not_response"
                android:textAlignment="center"
                android:textSize="12sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/refresh" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>